<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginVertical="0dp"
    android:layout_marginHorizontal="0dp"
    android:layout_height="80dp">

    <View
        android:id="@+id/sectionFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/purple_rectangle_placeholder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/section"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/jura"
        android:text="@string/placeholder_medicine_texts"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sectionFrame"
        app:layout_constraintEnd_toEndOf="@+id/sectionFrame"
        app:layout_constraintStart_toStartOf="@+id/sectionFrame"
        app:layout_constraintTop_toTopOf="@+id/sectionFrame" />

</androidx.constraintlayout.widget.ConstraintLayout>