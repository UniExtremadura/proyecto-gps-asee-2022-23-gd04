<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.FirstAidKitFragment"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/fakTitleFrame"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yellow_gradient_rectangle_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fak_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fak_title"
            android:fontFamily="@font/jura"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/fakTitleFrame"
            app:layout_constraintEnd_toEndOf="@+id/fakTitleFrame"
            app:layout_constraintStart_toStartOf="@+id/fakTitleFrame"
            app:layout_constraintTop_toTopOf="@+id/fakTitleFrame" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fak_RV"
            android:layout_width="match_parent"
            android:layout_height="650dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fakTitleFrame" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>